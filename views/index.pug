extends layout.pug
block content

	div(class="p-5 mt-4 bg-light rounded-3")
		div(class="container-fluid py-5")
			h1(class="display-5 fw-bold") Library books
			p(class="fs-4") Search for a library book
			form
				div(class="row")
					div(class="col")
						label(class="form-label", for='txtIsbn') International Standard Book Number
						input(type='text', class='form-control form-control-lg', id='txtIsbn', placeholder='Enter ISBN', autocomplete='off')
					div(class="col")
						label(class="form-label", for='txtPostcode') Postcode
						input(type='text', class='form-control form-control-lg', id='txtPostcode', placeholder='Enter your postcode', autocomplete='off')

				div(class="d-grid gap-2 d-md-block mt-2")
					button(class='btn btn-lg btn-primary', type='button', id='btnSearch', disabled) Search
					button(class='btn btn-lg btn-link ml-3', type='button', id='btnClear') Clear

	div(class="container-fluid py-5")
		div(class="container")
			div(class='row')
				div(class='col col-xs-4')
					p(class='lead text-primary', id='pFound')
				div(class='col col-xs-4')
					p(class='lead text-success', id='pAvailable')
				div(class='col col-xs-4')
					p(class='lead text-danger', id='pUnavailable')

		div(class='container')
			table(id='tblResults', class='table')
				thead
					tr
						th Library
						th Service
						th Available
						th Unavailable
						th Link
